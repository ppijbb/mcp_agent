          "required": true
        },
        "num_results": {
          "type": "integer",
          "description": "결과 수",
          "default": 10,
          "required": false
        },
        "max_results": {
          "type": "integer",
          "description": "최대 결과 수 (num_results의 별칭)",
          "default": 10,
          "required": false
        }
      },
