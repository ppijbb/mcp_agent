    "tavily": {
      "category": "search",
      "description": "Tavily 검색 (MCP 서버 필요)",
      "parameters": {
        "query": {
          "type": "string",
          "description": "검색 쿼리",
          "required": true
        },
        "max_results": {
          "type": "integer",
          "description": "최대 결과 수",
          "default": 10,
          "required": false
        }
      },
      "implementation": "mcp_only",
