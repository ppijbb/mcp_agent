{
  "name": "local-researcher",
  "version": "1.0.0",
  "description": "Local Researcher - Gemini CLI + Open Deep Research Integration",
  "main": "src/cli/index.js",
  "scripts": {
    "start": "node src/cli/index.js",
    "dev": "nodemon src/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "build": "webpack --mode production",
    "install:gemini": "npm install -g @google/gemini-cli",
    "setup": "npm run install:gemini && npm install && pip install -r requirements.txt"
  },
  "keywords": [
    "research",
    "ai",
    "gemini",
    "cli",
    "local",
    "automation"
  ],
  "author": "Local Researcher Team",
  "license": "MIT",
  "dependencies": {
    "@google/gemini-cli": "^1.0.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.0",
    "yaml": "^2.3.0",
    "fs-extra": "^11.1.0",
    "glob": "^10.3.0",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "bin": {
    "local-researcher": "./src/cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/local-researcher.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/local-researcher/issues"
  },
  "homepage": "https://github.com/your-org/local-researcher#readme"
} 