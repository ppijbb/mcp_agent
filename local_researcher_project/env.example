# Autonomous Researcher Environment Configuration

# LLM Configuration (Gemini only)
LLM_PROVIDER=google
LLM_MODEL=gemini-2.5-flash-lite
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000
GOOGLE_API_KEY=your_google_api_key_here

# Agent Configuration
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT=300
ENABLE_SELF_PLANNING=true
ENABLE_AGENT_COMMUNICATION=true

# Research Configuration
MAX_SOURCES=20
SEARCH_TIMEOUT=30
ENABLE_ACADEMIC_SEARCH=true
ENABLE_WEB_SEARCH=true
ENABLE_BROWSER_AUTOMATION=true

# MCP Configuration
MCP_ENABLED=true
MCP_TIMEOUT=30

# Output Configuration
OUTPUT_DIR=output
ENABLE_PDF=true
ENABLE_MARKDOWN=true
ENABLE_JSON=true
