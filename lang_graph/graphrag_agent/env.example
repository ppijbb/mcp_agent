# GraphRAG Agent Environment Variables
# Copy this file to .env and set your values

# Required: OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Model Configuration
GRAPH_MODEL_NAME=gemini-2.5-flash-lite-preview-06-07
RAG_MODEL_NAME=gemini-2.5-flash-lite-preview-06-07
MAX_SEARCH_RESULTS=5
CONTEXT_WINDOW_SIZE=4000

# Optional: Graph Configuration
ENABLE_DOMAIN_SPECIALIZATION=true
DOMAIN_TYPE=general
ENABLE_SECURITY_PRIVACY=true
ENABLE_QUERY_OPTIMIZATION=true
DEFAULT_DATA_CLASSIFICATION=internal

# Optional: Visualization Configuration
ENABLE_VISUALIZATION=true
VISUALIZATION_OUTPUT_DIR=./graph_visualizations
VISUALIZATION_FORMATS=png,svg,html
MAX_VISUALIZATION_NODES=1000

# Optional: Optimization Configuration
ENABLE_OPTIMIZATION=true
OPTIMIZATION_QUALITY_THRESHOLD=0.8
MAX_OPTIMIZATION_ITERATIONS=10

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(levelname)s - %(message)s
LOG_FILE_PATH=null
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Runtime Configuration (set these when running the agent)
DATA_FILE=null
OUTPUT_PATH=null
QUERY=null
GRAPH_PATH=null
MODE=create
VERBOSE=false
