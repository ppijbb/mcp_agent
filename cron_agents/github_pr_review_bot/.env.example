# GitHub PR Review Bot - Environment Configuration (NO FALLBACK MODE)
# 이 파일을 .env로 복사하여 사용하세요.

# GitHub 설정 (필수)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# GitHub PR 리뷰 설정 - 기본적으로 비활성화
GITHUB_AUTO_REVIEW_ENABLED=false
GITHUB_REQUIRE_EXPLICIT_REVIEW_REQUEST=true

# GitHub 오류 처리 설정 - NO FALLBACK MODE
GITHUB_FAIL_FAST_ON_ERROR=true
GITHUB_MAX_RETRY_ATTEMPTS=0

# LLM 설정 (하나 이상 필수)
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here

DEFAULT_LLM_PROVIDER=openai
MAX_TOKENS=4000
TEMPERATURE=0.1
LLM_TIMEOUT=30

# LLM 오류 처리 설정 - NO FALLBACK MODE
LLM_FAIL_ON_ERROR=true
LLM_REQUIRE_VALID_RESPONSE=true

# MCP 서버 설정
MCP_SERVER_URL=http://localhost:8000

# 서버 설정
HOST=0.0.0.0
PORT=8000
WEBHOOK_PORT=8080

# 환경 설정
ENVIRONMENT=production
DEBUG=false

# 데이터베이스 설정
DATABASE_URL=sqlite:///./pr_review_bot.db

# 캐시 설정
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
ENABLE_CACHE=true

# 모니터링 설정
ENABLE_METRICS=true
ENABLE_TRACING=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# 보안 설정
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
ENABLE_CORS=true
ALLOWED_ORIGINS=["*"]

# 중요: NO FALLBACK MODE 특징
# - 모든 오류는 즉시 종료됩니다
# - PR 리뷰는 기본적으로 비활성화되어 있습니다
# - 명시적 리뷰 요청이 있을 때만 동작합니다
# - Fallback 메커니즘이 없으므로 모든 설정이 정확해야 합니다
